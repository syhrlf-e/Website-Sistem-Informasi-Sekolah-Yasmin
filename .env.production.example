# ====================================
# PPDB SUBDOMAIN CONFIGURATION
# ====================================
# 
# Untuk deploy dengan subdomain PPDB, tambahkan config berikut ke .env production:
#
# APP_DOMAIN=sma-mutiarainsannusantara.my.id
# SESSION_DOMAIN=.sma-mutiarainsannusantara.my.id
#
# Note: SESSION_DOMAIN harus dimulai dengan titik (.) agar cookies bisa sharing
# antar main domain dan subdomain (ppdb.sma-mutiarainsannusantara.my.id)
#
# ====================================

# Application
APP_NAME="SMA Mutiara Insan Nusantara"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://sma-mutiarainsannusantara.my.id
APP_DOMAIN=sma-mutiarainsannusantara.my.id

# Session (IMPORTANT for subdomain)
SESSION_DRIVER=database
SESSION_DOMAIN=.sma-mutiarainsannusantara.my.id
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Mail (Resend)
MAIL_MAILER=resend
RESEND_API_KEY=your_resend_api_key
MAIL_FROM_ADDRESS=noreply@sma-mutiarainsannusantara.my.id
MAIL_FROM_NAME="${APP_NAME}"

# Cache
CACHE_DRIVER=database
